{
  "name": "sling-critter",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Sling Critter - A slingshot physics puzzle web game (Vite + TS + Matter.js)",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && npm run build:sw",
    "build:sw": "esbuild src/sw.ts --bundle --minify --sourcemap --format=esm --outfile=dist/sw.js",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "prepare": "playwright install --with-deps || true"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "matter-js": "^0.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.0.5",
    "esbuild": "^0.21.5",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  }
}


